---
layout: null
---
{
  {% for post in site.posts %}
  "{{ post.id }}" : { 
    "title": "{{ post.title | xml_escape }}",
    "url": "{{ post.url | prepend: site.baseurl | xml_escape }}",
    "content": {{ post.content |  strip_html | to_json }},
    "excerpt": {{ post.content | strip_figure | strip_html | strip_newline | truncate: 40, '...' | to_json }}
  }
  {% unless forloop.last %},{% endunless %}
  {% endfor %}
}
